      <Label fx:id="location" layoutX="311.0" layoutY="287.0" prefHeight="17.0" prefWidth="65.0" />
      <ImageView fx:id="myAvatar" fitHeight="95.0" fitWidth="99.0" layoutX="60.0" layoutY="109.0" pickOnBounds="true">
         <image>
            <Image url="@avatar.png" />
         </image>
      </ImageView>
      <Button layoutY="2.0" mnemonicParsing="false" onAction="#back" text="back" />
   </children>
</AnchorPane>
