      <Button fx:id="follow" layoutX="353.0" layoutY="172.0" mnemonicParsing="false" onMouseClicked="#follow" prefHeight="25.0" prefWidth="77.0" style="-fx-background-color: #1DA1F2; -fx-background-radius: 0;" text="Follow" textFill="WHITE" />
